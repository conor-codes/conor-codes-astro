---
// RecentProjectsTerminal.astro - Reuses archive CMD window styles
interface Project {
  name: string;
  description: string;
  year: string;
  tags: string[];
  url?: string;
}

interface Props {
  projects?: Project[];
}

const { projects = [] } = Astro.props;

// Validate projects array
if (!Array.isArray(projects)) {
  console.error('RecentProjectsTerminal: projects prop must be an array, received:', typeof projects);
}

const validProjects = Array.isArray(projects) ? projects : [];
---

<div class="cmd-window">
  <div class="cmd-titlebar">
    <div class="cmd-title">
      <div class="cmd-icon">C</div>
      Command Prompt - C:\Users\Conor\Projects\Recent
    </div>
  </div>

  <div class="cmd-body">
    <div class="prompt-line">
      <span class="prompt-path">C:\Users\Conor\Projects\Recent></span>
      <span class="prompt-command"> dir</span>
      <span class="cursor"></span>
    </div>

    <div class="system-info">
      <div>Volume in drive C is Windows</div>
      <div>Volume Serial Number is 1A2B-3C4D</div>
    </div>

    <div class="directory-path">
      Directory of C:\Users\Conor\Projects\Recent
    </div>

    <div class="dir-list">
      <div class="dir-header">
        <span>Name</span>
        <span>Description</span>
      </div>

      {validProjects.map((project) => (
        <Fragment>
          <a 
            href={project.url} 
            class="project-row"
            target="_blank"
            rel="noopener noreferrer"
          >
            <div class="name-column">
              <div class="col-date">{project.date}</div>
              <div class="col-name">&lt;DIR&gt; {project.name}</div>
            </div>
            <div class="col-desc">
              <span>{project.description}</span>
              <span class="project-tags-inline">
                {project.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </span>
            </div>
          </a>
        </Fragment>
      ))}
    </div>

    <div class="footer-info">
      <span class="project-count">{validProjects.length}</span> Dir(s)  â€¢  View <a href="/archive" class="archive-link">full archive</a> for more projects
    </div>
  </div>
</div>

<style>
  /* Reuse archive CMD window styles */
  .cmd-window {
    background: transparent;
    border: 1px solid #ffffff;
    box-shadow: none;
    margin-bottom: 2rem;
    font-size: 0.95rem;
    animation: fadeInUp 0.6s ease-out;
    transition: box-shadow 0.3s ease, transform 0.3s ease;
  }

  .cmd-window:hover {
    box-shadow: 0 4px 20px rgba(124, 179, 66, 0.1);
    transform: translateY(-2px);
  }

  .cmd-titlebar {
    background: transparent;
    padding: 0.5rem 0.75rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #333;
  }

  .cmd-title {
    font-size: 0.85rem;
    color: #cccccc;
    font-family: 'Segoe UI', sans-serif;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .cmd-icon {
    width: 16px;
    height: 16px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 10px;
    color: white;
    font-weight: bold;
    border-radius: 2px;
  }

  .cmd-body {
    padding: 1.5rem;
    font-size: 0.9rem;
    background: transparent;
    color: #999;
    position: relative;
    font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
    min-height: 300px;
  }

  .prompt-line {
    margin-bottom: 0.5rem;
    color: #999;
  }

  .prompt-path {
    color: #666;
  }

  .prompt-command {
    color: #999;
    font-weight: 500;
  }

  @keyframes blink {
    0%, 49% { opacity: 1; }
    50%, 100% { opacity: 0; }
  }

  ..cursor {
   display: inline-block;
    width: 2px;
    height: 1.15em;
    background: #7cb342;
    vertical-align: text-bottom;
    animation: blink 1s step-end infinite;
  }

  .system-info {
    margin-bottom: 1.5rem;
    color: #666;
  }

  .directory-path {
    margin-bottom: 1.5rem;
    color: #999;
  }

  .dir-list {
    margin-top: 1rem;
  }

  .dir-header {
    color: #666;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #333;
    display: grid;
    grid-template-columns: 180px 1fr;
    gap: 2rem;
  }

  .project-row {
    display: grid;
    grid-template-columns: 180px 1fr;
    gap: 2rem;
    padding: 0.5rem 0.5rem;
    border-left: 3px solid transparent;
    transition: all 0.2s ease;
    cursor: pointer;
    text-decoration: none;
    color: inherit;
    align-items: start;
  }

  .project-row:hover {
    background: rgba(124, 179, 66, 0.08);
    border-left-color: #7cb342;
  }

  .col-date {
    color: #666;
    font-size: 0.8rem;
    opacity: 0.7;
    margin-bottom: 0.25rem;
  }

  .col-name {
    color: #7cb342;
    font-weight: 600;
  }

  .name-column {
    display: flex;
    flex-direction: column;
  }

  .col-type {
    color: #999;
  }

  .col-desc {
    color: #999;
    line-height: 1.4;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
  }

  .project-tags-inline {
    display: inline-flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .col-year {
    color: #666;
    text-align: right;
    white-space: nowrap;
  }

  .project-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
    padding-left: 200px;
  }

  .tag {
    background: rgba(124, 179, 66, 0.1);
    border: 1px solid rgba(124, 179, 66, 0.3);
    color: #7cb342;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
  }

  .footer-info {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #333;
    color: #999;
  }

  .project-count {
    color: #7cb342;
    font-weight: 600;
  }

  .archive-link {
    color: #7cb342;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .archive-link:hover {
    color: #a8d97a;
    text-decoration: underline;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .cmd-body {
      padding: 1rem;
      font-size: 0.85rem;
    }

    .dir-header {
      display: none;
    }

    .project-row {
      grid-template-columns: 1fr;
      gap: 0.5rem;
    }

    .project-tags { 
      padding-left: 0;
    }

    .col-year {
      text-align: left;
    }
  }
</style>