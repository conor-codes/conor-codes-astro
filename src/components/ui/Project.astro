---
import type { CollectionEntry } from 'astro:content';

interface Props {
  entry: CollectionEntry<'projects'>;
}

const { entry } = Astro.props;
const { data } = entry;
---

<li class="animate">
  <a 
    href={data.url} 
    target="_blank" 
    rel="noopener noreferrer"
    class="block"
  >
    <article class="group relative border border-border rounded-lg p-5 transition-all duration-300 ease-out hover:bg-muted hover:border-headings cursor-pointer">
      <div class="relative flex items-start justify-between gap-4">
        <div class="flex-1 min-w-0">
          <div class="flex items-center gap-3 mb-2">
            <h3 class="text-headings font-semibold transition-colors duration-200">
              {data.title}
            </h3>
            {data.date && (
              <span class="text-xs text-muted-foreground">
                {data.date}
              </span>
            )}
          </div>
          <p class="text-foreground text-sm mb-3 leading-relaxed">
            {data.description}
          </p>
          {data.tech && data.tech.length > 0 && (
            <div class="flex flex-wrap gap-2">
              {data.tech.map((tech) => (
                <span class="text-xs px-2.5 py-1 rounded-full bg-secondary text-muted-foreground border border-border transition-colors duration-200">
                  {tech}
                </span>
              ))}
            </div>
          )}
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground group-hover:text-headings transition-all duration-200 shrink-0 opacity-60 group-hover:opacity-100">
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
          <polyline points="15 3 21 3 21 9"></polyline>
          <line x1="10" y1="14" x2="21" y2="3"></line>
        </svg>
      </div>
    </article>
  </a>
</li>