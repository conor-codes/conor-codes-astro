---
import '@/styles/global.css';
import '@/assets/fonts/inter.css';
import { type Seo } from '@/lib/constants';
import Header from '@/components/partials/Header.astro';
import Footer from '@/components/partials/Footer.astro';
import Head from '@/components/partials/Head.astro';

interface Props {
  seo?: Seo
}

const { seo } = Astro.props;
---

<html lang="en">
  
  <head>
    <!-- CRITICAL: Force dark mode immediately to prevent flash -->
    <script is:inline>
      document.documentElement.classList.add('dark');
    </script>
    
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <Head seo={seo} />
  </head>
  <body class="bg-background text-foreground pb-12">
    <Header />
    <main class="pt-24">
      <slot />
    </main>
    <Footer />
  </body>
</html>